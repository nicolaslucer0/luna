@model Yana.Models.DomainEntities.Notificacion
@using Yana.Models.DomainEntities
@{
    ViewData["Title"] = "NotificacionRespuestaOpciones";
    Layout = "~/Views/Shared/_LoggedLayout.cshtml";
}

<script type="text/javascript" language="javascript">

function Answer(idNotificacionOpcion) {
    location.href = "@Url.Action("RespuestaNotificacionOp", "Notificacion")" + "?idNotificacion=" + @Model.IdNotificacion + "&idNotificacionOpcion=" + idNotificacionOpcion;
};

</script>

<div class="container">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="flex-container">
                        <div class="panel-heading" style="font-size: 25px; margin-bottom: 30px;">
                            <strong style="font-family: 'poppinsbold'">Responder notificacion</strong>
                        </div>
                        Por favor, presione una de las opciones disponibles para responder la notificación.
                    </div>   
                        
                    <div class="card" style="overflow-x: auto;">
                        <div style="margin-bottom:10px; font-family: poppinsbold;">
                            @Model.Mensaje
                        </div>
                        <div class="panel-body d-flex" id="divPanelBody">
                            @foreach (NotificacionOpcion notificacionOpcion in Model.NotificacionOpcion)
                            {
                                <div style="text-align: center; margin-right: 10px;">
                                    <button class="btn btn-lg yanaButton" onclick="Answer(@notificacionOpcion.IdNotificacionOpcion);">@notificacionOpcion.Descripcion</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>