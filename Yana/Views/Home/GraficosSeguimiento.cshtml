@using Yana.Helpers;
@using Yana.Enums;
@{
    Layout = "~/Views/Shared/_LoggedLayout.cshtml";
}

<script type="text/javascript">

    $(function () {

        var url1 = '@Url.Action("GetRegistrosDiariosPorPaciente", "Home")';
            $.get(url1, {}, function (data) {
                
                var categorias = [];
                var series = [];

                var firstElement = true;

                $.each(data, function (i, obj) {
                    if (firstElement) {
                        $.each(obj['listCategory'], function (i2, category) {
                            categorias.push(category);
                        }); 

                        firstElement = false;
                    }

                    var dataArray = [];

                    $.each(obj['listValue'], function (i2, obj2) {
                        dataArray.push(obj2);
                    });

                    series.push({
                        name: '' + obj['nameSerie'] + '',
                        color: obj['Color'],
                        data: dataArray
                    });

                });

                bindRegistrosDiariosPaciente(categorias, series);
            });

        function bindRegistrosDiariosPaciente(categorias, seriesData) {
            $('#container1').highcharts({
                chart: {
                    type: 'line'
                },
                title: {
                    text: '',
                    x: -20 //center
                },
                subtitle: {
                    text: '',
                    x: -20
                },
                xAxis: {
                    categories: categorias
                },
                yAxis: {
                    title: {
                        text: 'Cantidad de Registros Diarios'
                    },
                    plotLines: [{
                        value: 0,
                        width: 2,
                        color: '#3661ED'
                    }]
                },
                tooltip: {
                    valueSuffix: ''
                },
                legend: {
                    layout: 'vertical',
                    align: 'right',
                    verticalAlign: 'middle',
                    borderWidth: 0
                },
                series: seriesData
            });
        }

        var url2 = '@Url.Action("GetEmocionesUltimaSemana", "Home")';
            $.get(url2, {}, function (data) {
                
                var categorias = [];
                var series = [];

                var firstElement = true;

                $.each(data, function (i, obj) {
                    if (firstElement) {
                        $.each(obj['listCategory'], function (i2, category) {
                            categorias.push(category);
                        }); 

                        firstElement = false;
                    }

                    var dataArray = [];

                    $.each(obj['listValue'], function (i2, obj2) {
                        dataArray.push(obj2);
                    });

                    series.push({
                        name: '' + obj['nameSerie'] + '',
                        color: obj['Color'],
                        data: dataArray
                    });

                });

                bindEmocionesSemana(categorias, series);
            });

        function bindEmocionesSemana(categorias, seriesData) {
            $('#container2').highcharts({
                chart: {
                    type: 'line'
                },
                title: {
                    text: '',
                    x: -20 //center
                },
                subtitle: {
                    text: '',
                    x: -20
                },
                xAxis: {
                    categories: categorias
                },
                yAxis: {
                    title: {
                        text: 'Cantidad de Registros Diarios'
                    },
                    plotLines: [{
                        value: 0,
                        width: 2,
                        color: '#3661ED'
                    }]
                },
                tooltip: {
                    valueSuffix: ''
                },
                legend: {
                    layout: 'vertical',
                    align: 'right',
                    verticalAlign: 'middle',
                    borderWidth: 0
                },
                series: seriesData
            });
        }

        var url3 = '@Url.Action("GetRespuestasNotificaciones", "Home")';
            $.get(url3, {}, function (data) {
                
                var categorias = [];
                var series = [];

                var firstElement = true;

                $.each(data, function (i, obj) {
                    if (firstElement) {
                        $.each(obj['listCategory'], function (i2, category) {
                            categorias.push(category);
                        }); 

                        firstElement = false;
                    }

                    var dataArray = [];

                    $.each(obj['listValue'], function (i2, obj2) {
                        dataArray.push(obj2);
                    });

                    series.push({
                        name: '' + obj['nameSerie'] + '',
                        color: obj['Color'],
                        data: dataArray
                    });

                });

                bindRespuestaNotificaciones(categorias, series);
            });

        function bindRespuestaNotificaciones(categorias, seriesData) {
            $('#container3').highcharts({
                chart: {
                    type: 'column'
                },
                title: {
                    text: '',
                    x: -20 //center
                },
                subtitle: {
                    text: '',
                    x: -20
                },
                xAxis: {
                    categories: categorias
                },
                yAxis: {
                    title: {
                        text: 'Cantidad de respuesta a notificaciones'
                    },
                    plotLines: [{
                        value: 0,
                        width: 2,
                        color: '#3661ED'
                    }]
                },
                tooltip: {
                    valueSuffix: ''
                },
                legend: {
                    layout: 'vertical',
                    align: 'right',
                    verticalAlign: 'middle',
                    borderWidth: 0
                },
                series: seriesData
            });
        }

        var url4 = '@Url.Action("GetPacientesPorPatologia", "Home")';

        $.get(url4, {}, function (data) {

            var series = [];

            $.each(data, function (i, obj) {
                series.push({
                    name: '' + obj['nameSerie'] + '',
                    y: obj['value'],
                    selected: obj['selected'],
                    sliced: obj['sliced']
                });
            });

            bindPacientesPatologia(series);
        });

        function bindPacientesPatologia(seriesData) {
            $('#container4').highcharts({
                chart: {
                    type: 'pie',
                    size: '80%',
                    innerSize: '60%',    
                },
                
                title: {
                    text: ''
                },
                subtitle: {
                    text: ''
                },
                xAxis: {
                    type: 'category'
                },
                
                yAxis: {
                    title: {
                        text: ''
                    }
                },
                legend: {
                    enabled: false
                },
                plotOptions: {
                    pie: {
                        center: ['50%', '50%'],
                        shadow: false,
                        allowPointSelect: true,
                        cursor: 'pointer',
                        depth: 0,
                        size: '80%',
                        innerSize: '60%', 
                        dataLabels: {
                            enabled: true,
                            format: '{point.name} ({point.y})',
                            style: {
                                width: '90px'
                            }
                        }
                    },
                    series: {
                        size: '60%',
                        borderWidth: 0,
                        dataLabels: {
                            enabled: true
                        }
                    }
                },
                tooltip: {
                    headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
                    pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.y}%</b><br/>'
                },
                series: [{
                    name: 'Total',
                    colorByPoint: true,
                    data: seriesData,
                    pointWidth: 30
                }]
            });
        }

        if (@UserCache.IdPerfil != @Convert.ToInt32(EnumPerfilUsuario.Paciente)) {
            $.get('@Url.Action("DispersionRegistroDiario", "Home")', null, function (content) {
                $("#container5").html(content);
            });

            $.get('@Url.Action("DispersionNotificacionesRespondidas", "Home")', null, function(content){
                $("#container6").html(content);
            });
        }
    });
</script>

