@{
    Layout = "~/Views/Shared/_LoggedLayout.cshtml";
}

<script type="text/javascript" language="javascript">

    function Create() {
        window.location.assign("./PatologiaManager/0");
    };

    function Edit(id) {
        window.location.assign("./PatologiaManager/" + id);
    };

    $(document).ready(function () {

        $.get('@Url.Action("GetPatologias", "Patologia")', function (data) {
            let pacientes = data;
            console.log(data);
            let registros = data.patologias;
            let headers = `
                <thead>
                    <tr>
                        <th style="font-family: 'poppinsbold'" scope="col">Nombre</th>
                        <th style="font-family: 'poppinsbold'" scope="col">Descripcion</th>
                    </tr>
                </thead>
            `;
            let rows = '<tbody>';
            registros.forEach(r => {
                rows += `<tr style="font-size: 12px">
                            <td>${r.nombre}</td>
                            <td>${r.descripcion}</td>
                        </tr>`
            });
            rows += `</tbody>`;
            $('#list').append(headers);
            $('#list').append(rows);
        });


    });
</script>

<br />
<div class="container dashboard-content">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="flex-container">
                        <div class="panel-heading" id="panelHead">
                            Patologias cargadas
                        </div>
                        <button class="btn yanaButton" onclick="Create();"><i class='fa fa-plus-square fa-lg'></i> Nueva Patología</button>
                    </div>
                    <div id="divMessagesP" class="ui-state-highlight ui-corner-all" style="display: none;">
                        <p align="left">
                            <div class="alert alert-danger">
                                <strong>Error!</strong><label id="lblErrorP" style="font-size: 12px; color: firebrick; font-weight: bold; margin-left: 5px;">@TempData["messageERROR"]</label>
                            </div>
                        </p>
                    </div>
                    <div class="panel-body overflow-scroll">
                        <p style="color: red; font-weight: 900;">@TempData["messageERROR"]</p>
                        <div>
                            <table id="list" class="table scroll" cellpadding="0" cellspacing="0"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

