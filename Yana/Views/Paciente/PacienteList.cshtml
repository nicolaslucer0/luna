
@{
    ViewData["Title"] = "PacienteList";
    Layout = "~/Views/Shared/_LoggedLayout.cshtml";
}

<script type="text/javascript" language="javascript">

    const Create = () => window.location.assign("./PacienteManager/0");

    const Edit = (id) => window.location.assign("./PacienteManager/" + id);

    const Notificaciones = (id) => window.location.href = "@Url.Action("NotificacionList", "Notificacion")" + "?idPaciente=" + id;

    const Seguimiento = (id) => window.location.href = "@Url.Action("SeguimientoPacienteList", "SeguimientoPaciente")" + "?idPaciente=" + id;

    const RegistroDiario = (id) => window.location.href = "@Url.Action("RegistroDiarioList", "RegistroDiario")" + "?idPaciente=" + id;

    const RenderBadge = (number) => `<div class="badge" > ${number}</div>`;



    const buildCard = (paciente) => `
        <div class="d-flex align-items-center luna-card">
            ${paciente.notSeenNotifications > 0 ? RenderBadge(paciente.notSeenNotifications) : ''}
            <div class="card-info">
                <div class="user-image"><div class="edit-button" onclick="Edit(${paciente.idUsuario})">Editar</div><img src="/img/team/1.png"></div>
            </div>
            <div class="luna-card--body flex-grow-1">
                <h5 class="card-title">${paciente.apellido}, ${paciente.nombre}</h5>
                <div class="card-legend">${paciente.edad} años</div>
                <div class="luna-card-body">
                    <div class='card-item--container'><img class="card-icon" src="/img/icon/id.png" /><h6 class="card-subtitle">${paciente.dni}</h6></div>
                    <div class='card-item--container'><img class="card-icon" src="/img/icon/mail.png" /><p class="card-subtitle">${paciente.email}</p></div>
                </div>
                <div class="d-flex justify-content-end luna-card--actions">
                    <button data-bs-toggle="tooltip" data-bs-placement="top" title="Registro diario" class="luna-card--button" onclick="RegistroDiario(${paciente.idUsuario})"><img class="card-icon" src="/img/icon/book.png" /></button>
                    <button data-bs-toggle="tooltip" data-bs-placement="top" title="Seguimiento" class="luna-card--button" onclick="Seguimiento(${paciente.idUsuario})"><img class="card-icon" src="/img/icon/seguimiento.png" /></button>
                    <button data-bs-toggle="tooltip" data-bs-placement="top" title="Notificaciones" class="luna-card--button" onclick="Notificaciones(${paciente.idUsuario})"><img class="card-icon" src="/img/icon/notification.png" /></button>
                </div>
            </div>            
        </div>
    `;

    $(document).ready(function () {
        $.get('@Url.Action("GetPacientes", "Paciente")', function (data) {
            let pacientes = data;
            if (!pacientes || pacientes.length == 0) {
                $('#list').append("No hay ningun paciente creado.");
                return;
            }
                        
            let cards = '';
            pacientes.forEach(p => {
                console.log(p);
                cards += buildCard(p)
            });
            
            $('#list').append(cards);
        });
    });
</script>

<style>
    .luna-card {
        height: fit-content;
        box-sizing: border-box;
        position: relative;
        min-width: 30%;
        transition: .4s;
        background: white;
        background: white;
        padding: 10px;
        margin: 10px;
        border: none;
        border-radius: 30px;
        box-shadow: 0 0 2px 0 #00000021;
    }

    .card-legend {
        color: #9f9f9f;
        font-size: 12px;
    }

    .luna-card-body {
        font-size: 10px;
    }

    .card-item--container {
        display: flex;
        align-items: center;
    }
    .luna-card:hover {
        box-shadow: 0 0 10px 0 #8080803d;
        
    }

    .luna-card--body {
        margin: 20px 10px;
        width: 20%;
        text-overflow: ellipsis;
    }

    .card-info {
        margin: 0 15px 0 20px;
    }

    .card-title {
        font-family: poppinsbold;
    }
    
    .card-subtitle {
        margin: 2px 0;
        font-size: 12px;
    }

   .card-text {
        font-size: 12px;
        margin: 5px 0;
   }

    .badge {
        background: red;
        border-radius: 100%;
        height: 10px;
        width: 10px;
        font-size: 10px;
        padding: 9px;
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
        top: 0;
        right: 0;
    }

   .luna-card--actions {
   }

    .luna-card--button {
        background: white;
        border: none;
    }

    #list {
        flex-shrink: 1;
        align-content: flex-start;
    }


    .card-icon {
        margin-right: 5px;
        height: 15px;
        width: 15px;
        transition: .4s;
    }

    .dropdown {
        align-self: flex-start;
        cursor: pointer;
    }

    .dropdown-button {
        padding: 10px;
        transition: .5s;
    }

    .dropdown-button:hover {
        color: gray;
    }

    .dropdown button {
        text-transform: none;
        color: black;
    }
</style>

<div class="container">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="flex-container">
                        <div class="panel-heading" style="font-size: 25px; margin-bottom: 20px;">
                            <strong style="font-family: 'poppinsbold'">Sus pacientes</strong>
                        </div>
                        <button class="btn yanaButton" onclick="Create();"><i class='fa fa-plus-square fa-lg'></i> Nuevo Paciente</button>
                    </div>

                    <div id="divMessagesP" class="ui-state-highlight ui-corner-all" style="display: none;">
                        <p align="left">
                            <div class="alert alert-danger">
                                <strong>Error!</strong><label id="lblErrorP" style="font-size: 12px; color: firebrick; font-weight: bold; margin-left: 5px;">@TempData["messageERROR"]</label>
                            </div>
                        </p>
                    </div>

                    <div id="list" class="d-flex flex-wrap overflow-scroll" cellpadding="0" cellspacing="0" style="margin-top: 2em;">
                    </div>

                    <div class="panel-body">
                        <p style="color: red; font-weight: 900;">@TempData["messageERROR"]</p>
                        <div>
                            <div id="pager" class="" style="text-align: center;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

