
@{
    ViewData["Title"] = "PacienteList";
    Layout = "~/Views/Shared/_LoggedLayout.cshtml";
}

<script type="text/javascript" language="javascript">

    function Create() {
        window.location.assign("./PacienteManager/0");
    };

    function Edit(id) {
        window.location.assign("./PacienteManager/" + id);
    };

    function Notificaciones(id) {
        window.location.href = "@Url.Action("NotificacionList", "Notificacion")" + "?idPaciente=" + id;
    };

    function Seguimiento(id) {
        window.location.href = "@Url.Action("SeguimientoPacienteList", "SeguimientoPaciente")" + "?idPaciente=" + id;
    };

    function RegistroDiario(id) {
        window.location.href = "@Url.Action("RegistroDiarioList", "RegistroDiario")" + "?idPaciente=" + id;
    };

    
    $(document).ready(function () {
        $.get('@Url.Action("GetPacientes", "Paciente")', function (data) {
            let registros = data.paciente;
            console.log(data);

            let registros = data.paciente;
            let headers = `
                <thead>
                    <tr>
                        <th style="font-family: 'poppinsbold'" scope="col">Fecha</th>
                        <th style="font-family: 'poppinsbold'" scope="col">Situacion</th>
                    </tr>
                </thead>
            `;
            let rows = '<tbody>';
            registros.forEach(r => {
                rows += `<tr style="font-size: 12px">
                            <td>${r.codigo}</td>
                            <td>${r.nombre}</td>
                        </tr>`
            });
            rows += `</tbody>`;
            $('#list').append(headers);
            $('#list').append(rows);
        });

        });
    });
</script>

<br />
<div class="container dashboard-content">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="flex-container">
                        <div class="panel-heading" id="panelHead">
                            Pacientes
                        </div>
                        <button class="btn yanaButton" onclick="Create();"><i class='fa fa-plus-square fa-lg'></i> Nuevo Paciente</button>
                    </div>
                    <div id="divMessagesP" class="ui-state-highlight ui-corner-all" style="display: none;">
                        <p align="left">
                            <div class="alert alert-danger">
                                <strong>Error!</strong><label id="lblErrorP" style="font-size: 12px; color: firebrick; font-weight: bold; margin-left: 5px;">@TempData["messageERROR"]</label>
                            </div>
                        </p>
                    </div>
                    <div class="panel-body">
                        <p style="color: red; font-weight: 900;">@TempData["messageERROR"]</p>
                        <div>
                            <table id="list" class="scroll" cellpadding="0" cellspacing="0"></table>
                            <div id="pager" class="scroll" style="text-align: center;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

